{
  "name": "beads-ui",
  "displayName": "beads-ui",
  "description": "An unofficial VSCode extension to make it working with beads easier",
  "version": "0.0.4",
  "author": {
    "name": "DEVtheOPS"
  },
  "license": "MIT",
  "homepage": "https://marketplace.visualstudio.com/items?itemName=DEVtheOPS.beads-ui",
  "repository": {
    "type": "git",
    "url": "https://github.com/DEVtheOPS/beads-ui-vscode-ext"
  },
  "bugs": {
    "url": "https://github.com/DEVtheOPS/beads-ui-vscode-ext/issues"
  },
  "publisher": "devtheops",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:beadsIssues.list",
    "onCommand:beads-ui.refreshIssues",
    "onCommand:beads-ui.toggleSort",
    "onCommand:beads-ui.newIssue"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "beads-ui.refreshIssues",
        "title": "Refresh Beads Issues",
        "icon": "$(refresh)"
      },
      {
        "command": "beads-ui.toggleSort",
        "title": "Toggle Sort Direction",
        "icon": "$(sort-precedence)"
      },
      {
        "command": "beads-ui.newIssue",
        "title": "New Beads Issue",
        "icon": "$(add)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "beadsIssues",
          "title": "Beads",
          "icon": "resources/beads-activity-bar.svg"
        }
      ]
    },
    "views": {
      "beadsIssues": [
        {
          "type": "webview",
          "id": "beadsIssues.list",
          "name": "Issues",
          "icon": "resources/beads-activity-bar.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "beads-ui.refreshIssues",
          "when": "view == beadsIssues.list",
          "group": "navigation"
        },
        {
          "command": "beads-ui.toggleSort",
          "when": "view == beadsIssues.list",
          "group": "navigation@1"
        },
        {
          "command": "beads-ui.newIssue",
          "when": "view == beadsIssues.list",
          "group": "navigation@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/sql.js": "^1.4.9",
    "@types/vscode": "^1.106.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "copy-webpack-plugin": "^13.0.1",
    "eslint": "^9.39.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@vscode-elements/elements": "^2.3.1",
    "@vscode/sqlite3": "^5.0.8",
    "edge.js": "^6.3.0",
    "wa-sqlite": "^1.0.0"
  }
}
